@page "/evento/{EventoIdString}"
@inject NavigationManager NavigationManager
@inject IEventoService eventoService
@inject Models.States.PedidoStateService PedidoService

@using Eventify.Models
@using Eventify.Core.Interfaces

<div class="detalhes-prototipo-1">
    @if (ErroParser)
    {
        <div class="error">
            <h2>ID do evento inválido</h2>
            <p>@EventoIdString</p>
            <button class="btn-primary" @onclick="VoltarParaHome">Voltar para Home</button>
        </div>
    }
    else if (IsBusy)
    {
        <div class="loading">
            <div class="spinner"></div>
            <p>Carregando evento...</p>
        </div>
    }
    else if (EventoAtual == null)
    {
        <div class="error">
            <h2>Evento não encontrado</h2>
            <p>O evento que você está procurando não existe ou foi removido.</p>
            <button class="btn-primary" @onclick="VoltarParaHome">Voltar para Home</button>
        </div>
    }
    else
    {
        <!-- Hero Section com Imagem -->
        <div class="hero-section">
            <div class="hero-overlay"></div>
            <img src="@EventoAtual.ImagemEvento" alt="@EventoAtual.Titulo" class="hero-image" />

            @if (EventoEncerrado)
            {
                <div class="overlay-encerrado">
                    <span class="oi oi-ban"></span>
                    EVENTO ENCERRADO
                </div>
            }

            <div class="hero-content">
                <button class="btn-voltar" @onclick="VoltarParaHome">
                    <span class="oi oi-arrow-left"></span> Voltar
                </button>

                <div class="hero-info">
                    <span class="categoria-badge">@EventoAtual.Categoria</span>
                    <h1 class="evento-titulo">@EventoAtual.Titulo</h1>

                    @if (EventoEncerrado)
                    {
                        <div class="alerta-hero">
                            <span class="oi oi-warning"></span>
                            <span>Este evento já ocorreu ou as vendas foram encerradas</span>
                        </div>
                    }

                    <div class="evento-meta">
                        <div class="meta-item">
                            <span class="oi oi-calendar"></span>
                            <span>@EventoAtual.DataInicio?.ToString("dd MMM yyyy")</span>
                        </div>
                        <div class="meta-item">
                            <span class="oi oi-clock"></span>
                            <span>@EventoAtual.HoraInicio?.ToString(@"hh\:mm")</span>
                        </div>
                        <div class="meta-item">
                            <span class="oi oi-location-pin"></span>
                            <span>@EventoAtual.Endereco?.CidadeNome</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Container Principal -->
        <div class="main-container">
            <div class="content-grid">
                <!-- Coluna Principal -->
                <div class="main-content">
                    <!-- Descrição -->
                    <section class="card">
                        <h2 class="section-title">Sobre o Evento</h2>
                        <p class="descricao-texto">@EventoAtual.Descricao</p>
                    </section>

                    <!-- Ingressos -->
                    <section class="card">
                        <h2 class="section-title">Ingressos Disponíveis</h2>

                        @if (EventoAtual.CategoriasIngresso != null && EventoAtual.CategoriasIngresso.Any())
                        {
                            <div class="ingressos-lista">
                                @foreach (var categoria in EventoAtual.CategoriasIngresso)
                                {
                                    if (!quantidadesSelecionadas.ContainsKey(categoria.Id))
                                    {
                                        quantidadesSelecionadas[categoria.Id] = 1;
                                    }

                                    <div class="ingresso-item @(EventoEncerrado ? "ingresso-disabled" : "")">
                                        <div class="ingresso-info-left">
                                            <h3 class="ingresso-nome">@categoria.Titulo</h3>
                                            @if (!string.IsNullOrWhiteSpace(categoria.Descricao))
                                            {
                                                <p class="ingresso-desc">@categoria.Descricao</p>
                                            }

                                            @if (!EventoEncerrado)
                                            {
                                                <span class="ingresso-disponivel">
                                                    <span class="oi oi-check"></span> @categoria.LimiteCompra disponíveis
                                                </span>
                                            }
                                        </div>

                                        <div class="ingresso-info-right">
                                            <div class="preco-container">
                                                <div class="preco">R$ @categoria.Valor.ToString("N2")</div>

                                                @if (!EventoEncerrado)
                                                {
                                                    <div class="quantidade-selector">
                                                        <button class="btn-qtd" @onclick="() => AlterarQuantidade(categoria.Id, -1)">
                                                            <span class="oi oi-minus">-</span>
                                                        </button>
                                                        <span class="qtd-numero">@quantidadesSelecionadas[categoria.Id]</span>
                                                        <button class="btn-qtd" @onclick="() => AlterarQuantidade(categoria.Id, 1)">
                                                            <span class="oi oi-plus">+</span>
                                                        </button>
                                                    </div>
                                                }
                                            </div>

                                            @if (EventoEncerrado)
                                            {
                                                <button class="btn-comprar btn-disabled" disabled>
                                                    <span class="oi oi-ban"></span>
                                                    <span>Encerrado</span>
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn-comprar" @onclick="() => IrParaPagamento(categoria)">
                                                    <span class="oi oi-cart"></span>
                                                    <span>Comprar</span>
                                                </button>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="texto-vazio">Nenhum ingresso disponível no momento.</p>
                        }
                    </section>
                </div>

                <!-- Sidebar -->
                <div class="sidebar">
                    <!-- Localização -->
                    <div class="card card-sticky">
                        <h3 class="section-title">Localização</h3>

                        @if (EventoAtual.Endereco != null)
                        {
                            <div class="localizacao-info">
                                <div class="loc-item">
                                    <strong>Local: @EventoAtual.Endereco.Complemento</strong>
                                </div>

                                @if (!string.IsNullOrWhiteSpace(EventoAtual.Endereco.Rua))
                                {
                                    <div class="loc-item">
                                        <strong>Endereço:</strong>
                                        <span>
                                            @EventoAtual.Endereco.Rua
                                            @if (!string.IsNullOrWhiteSpace(EventoAtual.Endereco.Numero))
                                            {
                                                <span>, @EventoAtual.Endereco.Numero</span>
                                            }
                                            @if (!string.IsNullOrWhiteSpace(EventoAtual.Endereco.Bairro))
                                            {
                                                <span>, @EventoAtual.Endereco.Bairro</span>
                                            }
                                            
                                        </span>
                                    </div>
                                    <div class="loc-item">
                                        <strong>Cidade:</strong>
                                        <span>@EventoAtual.Endereco.CidadeNome - RS - @EventoAtual.Endereco.Cep</span>
                                    </div>
                                }
                            </div>

                            <div class="mapa-embed">
                                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d111584.17763160035!2d-51.26201699902851!3d-29.07598094018795!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x951e43fd0d0886d9%3A0xf35411584b997579!2sUniversidade%20de%20Caxias%20do%20Sul!5e0!3m2!1spt-BR!2sbr!4v1763939367155!5m2!1spt-BR!2sbr"
                                        width="100%"
                                        height="100%"
                                        style="border:0;"
                                        allowfullscreen=""
                                        loading="lazy"
                                        referrerpolicy="no-referrer-when-downgrade">
                                </iframe>
                            </div>
                        }
                    </div>

                    <!-- Informações de Contato -->
                    <div class="card card-sticky" style="margin-top: 20px;">
                        <h3 class="section-title">Informações</h3>
                        <div class="info-list">
                            <div class="info-item">
                                <span class="oi oi-phone"></span>
                                <div>
                                    <small>Telefone</small>
                                    <span>(54) 99679-9833</span>
                                </div>
                            </div>
                            <div class="info-item">
                                <span class="oi oi-envelope-closed"></span>
                                <div>
                                    <small>Email</small>
                                    <span>contato@eventify.com</span>
                                </div>
                            </div>

                            @if (EventoAtual.DataTermino.HasValue)
                            {
                                <div class="info-item">
                                    <span class="oi oi-clock"></span>
                                    <div>
                                        <small>Término</small>
                                        <span>
                                            @EventoAtual.DataTermino.Value.ToString("dd/MM/yyyy")
                                            @if (EventoAtual.HoraFim.HasValue)
                                            {
                                                <span> às @EventoAtual.HoraFim.Value.ToString(@"hh\:mm")</span>
                                            }
                                        </span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


@code {
    [Parameter]
    public string EventoIdString { get; set; } = string.Empty;

    private Guid EventoId { get; set; }
    private EventoModel? EventoAtual { get; set; }
    private bool IsBusy { get; set; }
    private bool ErroParser { get; set; }
    private bool EventoEncerrado
    {
        get
        {
            if (EventoAtual?.DataInicio == null) return false;
            return EventoAtual.DataInicio < DateTime.Now;
        }
    }
    private Dictionary<Guid, int> quantidadesSelecionadas = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(EventoIdString))
            {
                ErroParser = true;
                return;
            }

            if (!Guid.TryParse(EventoIdString, out Guid parsedId))
            {
                ErroParser = true;
                return;
            }

            EventoId = parsedId;
            await CarregarEvento();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro no OnInitializedAsync: {ex.Message}");
            ErroParser = true;
        }
    }

    private async Task CarregarEvento()
    {
        try
        {
            IsBusy = true;
            var evento = await eventoService.ObterEventoPorIdAsync(EventoId);

            if (evento != null)
            {
                EventoAtual = Mapping.EventoMapper.ToModel(evento);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao carregar evento: {ex.Message}");
        }
        finally
        {
            IsBusy = false;
        }
    }

    private void AlterarQuantidade(Guid categoriaId, int delta)
    {
        if (!quantidadesSelecionadas.ContainsKey(categoriaId))
        {
            quantidadesSelecionadas[categoriaId] = 1;
        }

        int novaQtd = quantidadesSelecionadas[categoriaId] + delta;

        if (novaQtd >= 1 && novaQtd <= 10)
        {
            quantidadesSelecionadas[categoriaId] = novaQtd;
        }
    }

    private void IrParaPagamento(CategoriaIngressoModel categoria)
    {
        if (quantidadesSelecionadas.TryGetValue(categoria.Id, out int qtd))
        {
            PedidoService.IniciarPedido(EventoAtual, categoria, qtd);
            NavigationManager.NavigateTo("/pagamento");
        }
    }

    private void VoltarParaHome()
    {
        NavigationManager.NavigateTo("/home");
    }
}