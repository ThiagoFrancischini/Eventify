@page "/evento/{EventoIdString}"
@inject NavigationManager NavigationManager
@inject IEventoService eventoService

@using Eventify.Models
@using Eventify.Core.Interfaces

<div class="detalhes-evento-container">
    @if (ErroParser)
    {
        <div class="error-container">
            <p>ID do evento inválido: @EventoIdString</p>
            <button class="btn-voltar" @onclick="VoltarParaHome">Voltar para Home</button>
        </div>
    }
    else if (IsBusy)
    {
        <div class="loading-container">
            <p>Carregando...</p>
        </div>
    }
    else if (EventoAtual == null)
    {
        <div class="error-container">
            <p>Evento não encontrado.</p>
            <button class="btn-voltar" @onclick="VoltarParaHome">Voltar para Home</button>
        </div>
    }
    else
    {

        <!-- Imagem Principal -->
        <div class="evento-imagem-container">
            <img src="@EventoAtual.ImagemEvento" alt="@EventoAtual.Titulo" class="evento-imagem" />
        </div>

        <!-- Conteúdo -->
        <div class="evento-conteudo">
            <!-- Título e Informações Básicas -->
            <h1 class="evento-titulo">@EventoAtual.Titulo</h1>

            <div class="evento-info">
                <p class="evento-local">
                    <span class="oi oi-location-pin"></span>
                    @EventoAtual.Endereco?.CidadeNome
                </p>
                <p class="evento-data">
                    <span class="oi oi-calendar"></span>
                    @EventoAtual.DataInicio?.ToString("dd/MM/yyyy")
                    @if (EventoAtual.HoraInicio.HasValue)
                    {
                        <span> às @EventoAtual.HoraInicio.Value.ToString(@"hh\:mm")</span>
                    }
                </p>
            </div>

            <!-- Descrição -->
            <div class="secao">
                <h2 class="secao-titulo">Descrição do evento</h2>
                <p class="evento-descricao">@EventoAtual.Descricao</p>
            </div>

            <!-- Valores -->
            <div class="secao">
                <h2 class="secao-titulo">Valores</h2>

                @if (EventoAtual.CategoriasIngresso == null || !EventoAtual.CategoriasIngresso.Any())
                {
                    <p class="texto-vazio">Nenhum ingresso disponível.</p>
                }
                else
                {
                    <div class="ingressos-lista">
                        @foreach (var categoria in EventoAtual.CategoriasIngresso)
                        {
                            <div class="ingresso-card">
                                <div class="ingresso-info">
                                    <p class="ingresso-tipo">@categoria.Titulo</p>
                                    <p class="ingresso-preco">R$ @categoria.Valor.ToString("N2")</p>
                                    @if (!string.IsNullOrWhiteSpace(categoria.Descricao))
                                    {
                                        <p class="ingresso-descricao">@categoria.Descricao</p>
                                    }
                                    <span class="badge-disponivel">99 disponíveis</span>
                                    <!--<p class="ingresso-disponibilidade">
                                        @if (categoria.)
                                        {
                                            <span class="badge-esgotado">Esgotado</span>
                                        }
                                        else
                                        {
                                            <span class="badge-disponivel">@categoria.QuantidadeDisponivel disponíveis</span>
                                        }
                                    </p>-->
                                </div>
                                <button class="btn-carrinho"
                                        @onclick="() => AdicionarAoCarrinho(categoria)">
                                    <span class="oi oi-cart"></span>
                                </button>
                            </div>
                        }
                    </div>
                }
            </div>

            <!-- Localização -->
            @if (EventoAtual.Endereco != null)
            {
                <div class="secao">
                    <h2 class="secao-titulo">Localização</h2>

                    <div class="endereco-card">
                        <p class="endereco-linha">
                            <strong>Local:</strong> @EventoAtual.Endereco.CidadeNome
                        </p>
                        @if (!string.IsNullOrWhiteSpace(EventoAtual.Endereco.Rua))
                        {
                            <p class="endereco-linha">
                                <strong>Endereço:</strong>
                                @EventoAtual.Endereco.Rua
                                @if (!string.IsNullOrWhiteSpace(EventoAtual.Endereco.Numero))
                                {
                                    <span>, @EventoAtual.Endereco.Numero</span>
                                }
                            </p>
                        }
                        @if (!string.IsNullOrWhiteSpace(EventoAtual.Endereco.Bairro))
                        {
                            <p class="endereco-linha">
                                <strong>Bairro:</strong> @EventoAtual.Endereco.Bairro
                            </p>
                        }
                        <p class="endereco-linha">
                            <strong>Cidade:</strong> @EventoAtual.Endereco.CidadeNome - RS
                        </p>
                        @if (!string.IsNullOrWhiteSpace(EventoAtual.Endereco.Cep))
                        {
                            <p class="endereco-linha">
                                <strong>CEP:</strong> @EventoAtual.Endereco.Cep
                            </p>
                        }
                    </div>


                    <div class="mapa-container">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d111584.17763160035!2d-51.26201699902851!3d-29.07598094018795!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x951e43fd0d0886d9%3A0xf35411584b997579!2sUniversidade%20de%20Caxias%20do%20Sul!5e0!3m2!1spt-BR!2sbr!4v1763939367155!5m2!1spt-BR!2sbr" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>

                </div>
            }

            <!-- Mais Informações -->
            <div class="secao">
                <h2 class="secao-titulo">Mais informações</h2>
                <div class="info-card">
                    <p class="info-item">
                        <span class="oi oi-phone"></span>
                        <strong>Telefone:</strong> (54) 99679-9833
                    </p>
                    <p class="info-item">
                        <span class="oi oi-envelope-closed"></span>
                        <strong>Email:</strong> larirodrigues2808@gmail.com
                    </p>

                    @if (EventoAtual.DataTermino.HasValue)
                    {
                        <p class="info-item">
                            <span class="oi oi-clock"></span>
                            <strong>Término:</strong>
                            @EventoAtual.DataTermino.Value.ToString("dd/MM/yyyy")
                            @if (EventoAtual.HoraFim.HasValue)
                            {
                                <span> às @EventoAtual.HoraFim.Value.ToString(@"hh\:mm")</span>
                            }
                        </p>
                    }
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public string EventoIdString { get; set; } = string.Empty;

    private Guid EventoId { get; set; }
    private EventoModel? EventoAtual { get; set; }
    private bool IsBusy { get; set; }
    private bool ErroParser { get; set; }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            Console.WriteLine($"EventoIdString recebido: '{EventoIdString}'");

            if (string.IsNullOrWhiteSpace(EventoIdString))
            {
                Console.WriteLine("EventoIdString está vazio!");
                ErroParser = true;
                return;
            }

            if (!Guid.TryParse(EventoIdString, out Guid parsedId))
            {
                Console.WriteLine($"Falha ao converter '{EventoIdString}' para Guid");
                ErroParser = true;
                return;
            }

            EventoId = parsedId;
            Console.WriteLine($"EventoId parseado com sucesso: {EventoId}");

            await CarregarEvento();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro no OnInitializedAsync: {ex.Message}");
            Console.WriteLine($"Stack Trace: {ex.StackTrace}");
            ErroParser = true;
        }
    }

    private async Task CarregarEvento()
    {
        try
        {
            IsBusy = true;
            Console.WriteLine($"Carregando evento com ID: {EventoId}");

            var evento = await eventoService.ObterEventoPorIdAsync(EventoId);

            if (evento != null)
            {
                Console.WriteLine($"Evento encontrado: {evento.Titulo}");
                EventoAtual = Mapping.EventoMapper.ToModel(evento);
                Console.WriteLine($"Categorias de ingresso: {EventoAtual.CategoriasIngresso?.Count ?? 0}");
            }
            else
            {
                Console.WriteLine("Evento não encontrado!");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao carregar evento: {ex.Message}");
            Console.WriteLine($"Stack Trace: {ex.StackTrace}");
        }
        finally
        {
            IsBusy = false;
        }
    }

    private void AdicionarAoCarrinho(CategoriaIngressoModel categoria)
    {
        try
        {
            Console.WriteLine($"Adicionando categoria ao carrinho: {categoria.Titulo}");
            // TODO: Implementar lógica de adicionar ao carrinho
            // Por exemplo: salvar no localStorage, session, ou serviço de carrinho
            NavigationManager.NavigateTo("/carrinho");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao adicionar ao carrinho: {ex.Message}");
        }
    }

    private void VoltarParaHome()
    {
        NavigationManager.NavigateTo("/home");
    }
}